rundotpreview(){
	[[ $# == 0 ]] && \
		echo && \
		echo "USAGE:" && \
		echo "    ${FUNCNAME[0]} FILE.dot" && \
		return
	FORMAT=png
	DOTFILE=$1
	IMGFILE=${DOTFILE%.dot}.$FORMAT
	while :
	do
		dot -T$FORMAT -o $IMGFILE $DOTFILE
		okular $IMGFILE
	done
}




