rotng() {
    [[ $# -ne 0 ]] && echo $@ | tr 'A-Za-z0-9' 'N-ZA-Mn-za-m5-90-4' && return
    tr 'A-Za-z0-9' 'N-ZA-Mn-za-m5-90-4'
}
